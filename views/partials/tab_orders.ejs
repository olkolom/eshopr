<% if (orders.length > 0) { %>
<h4><%= name %></h4>
<table>
    <tr>
        <th><input type="checkbox" 
            id= <%- '"' +cbTag +'m"' %>
            onchange="toggleCB(<%- "'" +cbTag +"'" %> , <%= orders.length %>)">
        </th>
        <th></th>
        <th>Zboží</th>
        <th>Datum</th>
        <th>Číslo</th>
        <th>SK</th>
        <th>Objednavatel</th>
        <th>Doprava</th>
        <th>Platba</th>
        <th>Zaplaceno</th>
    </tr>
    <% orders.forEach((order, index) => { %>
        <tr>
            <td><input type="checkbox" id= <%- '"' +cbTag +index +'"' %> name="ord" value=<%= order.id %>></td>
            <td <% if (!order.allItemSold) {%>style="color: red; font-weight: bold"<%}%>%>><%= index +1 %></td>
            <td <% if (order.missingItem) {%>style="color: red"<%}%>%>><%= order.sender %></td>
            <td><%= order.date %></td>
            <td><a href="order?orderid=<%= order.number %>"><%= order.number %></a></td>
            <td style="font-weight: bold"><%= order.skOrder %></td>
            <td><%= order.name %></td>
            <td><%= order.delivery %></td>
            <td><%= order.payment %></td>
            <td><%= order.status %></td>
        </tr>
    <% }) %>
</table>
<% } %>